<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#9C27B0"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Cap nhap Comment"
        />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/ed_idp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/ed_idu"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/ed_idtt"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/ed_idname"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />
</LinearLayout>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/ed_comment"
        android:hint="Noi dung comment"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    >
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Cap nhap"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_capnhap"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Huy"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_huy"
        />
</LinearLayout>
</LinearLayout>