<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Comment_Product">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.1"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#9C27B0"
            android:layout_weight="1"
            android:text="Danh sách đánh giá sản phẩm"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="40dp"
            android:src="@drawable/ic_close"
            android:id="@+id/img_close"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="15dp"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="570dp"
        android:id="@+id/rcv_comment"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        >
        <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/ed_idpro"
            android:hint="id product"
            android:visibility="invisible"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/ed_iduser"
            android:hint="id user"
            android:visibility="invisible"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/ed_idusertest"
            android:hint="id user"
            android:visibility="invisible"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/ed_commentsp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="Danh gia san pham" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="Gửi"
                android:textColor="#5670FF"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                android:id="@+id/btn_comment"
                />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>