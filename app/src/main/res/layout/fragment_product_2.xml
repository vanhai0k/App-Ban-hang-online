<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment_admin.Product_Fragment_Admin">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm sản phẩm"
            android:textSize="22dp"
            android:gravity="center"
            android:textColor="#B830CF"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/ed_title_pro"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittext_bkg"
            android:drawablePadding="8dp"
            android:hint="Tên sản phẩm"
            android:padding="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            >
            <EditText
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:id="@+id/ed_price_pro"
                android:padding="8dp"
                android:hint="Giá SP"
                android:drawablePadding="8dp"
                android:inputType="number"
                android:background="@drawable/edittext_bkg"/>
            <EditText
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:id="@+id/ed_soluong_pro"
                android:padding="8dp"
                android:hint="Số lượng SP"
                android:inputType="number"
                android:drawablePadding="8dp"
                android:background="@drawable/edittext_bkg"/>
        </LinearLayout>
        <EditText
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:id="@+id/ed_size_pro"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:hint="Kích cỡ sản phẩm"
            android:drawablePadding="8dp"
            android:background="@drawable/edittext_bkg"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:id="@+id/ed_xuatsu_pro"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:hint="Xuất sứ sản phẩm"
            android:drawablePadding="8dp"
            android:background="@drawable/edittext_bkg"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:id="@+id/ed_phongcach_pro"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:hint="Phong cách"
            android:drawablePadding="8dp"
            android:background="@drawable/edittext_bkg"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:id="@+id/ed_infomation_pro"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:hint="Mô tả sản phẩm"
            android:drawablePadding="8dp"
            android:background="@drawable/edittext_bkg"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:id="@+id/ed_linkanh_pro"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:hint="Link ảnh sản phẩm"
            android:drawablePadding="8dp"
            android:background="@drawable/edittext_bkg"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu sản phẩm"
            android:textStyle="bold"
            android:id="@+id/btn_addpro"
            android:layout_margin="25dp"
            />
    </LinearLayout>

</FrameLayout>