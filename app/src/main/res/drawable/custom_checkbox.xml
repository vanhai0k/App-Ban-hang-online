<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#F3E2E8" /> <!-- Màu viền khi được chọn -->
            <stroke android:color="#cf3067" android:width="1dp" /> <!-- Màu viền ngoài -->
            <corners android:radius="2dp" /> <!-- Bo góc viền -->
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#EAEAEA" /> <!-- Màu viền khi không được chọn -->
            <stroke android:color="#EAEAEA" android:width="0.8dp" /> <!-- Màu viền ngoài -->
            <corners android:radius="4dp" /> <!-- Bo góc viền -->
        </shape>
    </item>
</selector>

